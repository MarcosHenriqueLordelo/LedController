<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.development.blackhole.ledcontroller.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Led-1"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/lblLed1State"
                android:layout_toLeftOf="@+id/swLed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/swLed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Led-2"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lblLed2State"
            android:layout_toLeftOf="@+id/swLed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"
            android:layout_marginRight="20dp"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <Switch
            android:id="@+id/swLed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Led-3"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/lblLed3State"
                android:layout_toLeftOf="@+id/swLed3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/swLed3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_bluetooth"
        android:background="@null"/>

</RelativeLayout>
